<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".a8stickit.SendStickerActivity">

    <Button
        android:id="@+id/A"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.3"
        android:layout_marginStart="8dp"
        tools:layout_marginTop="10dp"
        android:onClick="selectStickerOnClick" />

    <Button
        android:id="@+id/B"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="B"
        tools:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@+id/A"
        app:layout_constraintRight_toLeftOf="@+id/C"
        app:layout_constraintWidth_percent="0.3"
        android:onClick="selectStickerOnClick"/>

    <Button
        android:id="@+id/C"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="C"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@+id/B"
        app:layout_constraintWidth_percent="0.3"
        android:onClick="selectStickerOnClick"/>

    <Button
        android:id="@+id/D"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/A"
        app:layout_constraintWidth_percent="0.3"
        android:layout_marginStart="8dp"
        tools:layout_marginTop="10dp"
        android:onClick="selectStickerOnClick"/>

    <Button
        android:id="@+id/E"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="E"
        tools:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/B"
        app:layout_constraintLeft_toRightOf="@+id/D"
        app:layout_constraintRight_toLeftOf="@+id/F"
        app:layout_constraintWidth_percent="0.3"
        android:onClick="selectStickerOnClick"/>

    <Button
        android:id="@+id/F"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="F"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/C"
        app:layout_constraintLeft_toRightOf="@+id/E"
        app:layout_constraintWidth_percent="0.3"
        android:onClick="selectStickerOnClick"/>

    <TextView
        android:id="@+id/stickerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected sticker: "
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Now"
        android:onClick="sendButtonOnClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stickerTextView" />

